<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/item_img_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food1" />

    <TextView
        android:id="@+id/item_txt_foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Cheese Burger"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_img_main"
        app:layout_constraintTop_toTopOf="@+id/item_img_main" />

    <TextView
        android:id="@+id/item_txt_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Donya,Company"
        app:layout_constraintStart_toEndOf="@+id/item_img_main"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_foodName" />

    <TextView
        android:id="@+id/item_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="$12 VIP"
        app:layout_constraintStart_toEndOf="@+id/item_img_main"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_company" />


    <RatingBar
        android:progressTint="@color/yellow"
        android:rating="2.5"
        android:id="@+id/item_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <TextView
        android:id="@+id/item_number_of_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="(90 Rating)"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/item_ratingBar"
        app:layout_constraintStart_toStartOf="@+id/item_ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/item_ratingBar" />
</androidx.constraintlayout.widget.ConstraintLayout>